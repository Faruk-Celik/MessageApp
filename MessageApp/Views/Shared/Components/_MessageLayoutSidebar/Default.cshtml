﻿
<div class="col-md-3">
    <a href="/MailMessage/SendMessage/" class="btn btn-primary btn-block mb-3">
        <i class="fas fa-pen"></i>
        Create New Message</a>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Folders</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/MailMessage/Inbox/" class="nav-link">
                        <i class="fas fa-inbox"></i> Inbox
                        <span class="badge bg-primary float-right">@ViewBag.sendermessagecount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/MailMessage/SenderBox/" class="nav-link">
                        <i class="far fa-envelope"> Sent Messages</i>
                        <span class="badge bg-info float-right">@ViewBag.messagecount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-file-alt"></i> Drafts
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/MailMessage/TrashBox/" class="nav-link">
                        <i class="far fa-trash-alt"></i> Trash
                        <span class="badge bg-danger float-right">@ViewBag.trashmessagecount</span>

                    </a>
                </li>
            </ul>
        </div>

    </div>

</div>